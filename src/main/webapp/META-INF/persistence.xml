<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="saluberPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>it.storelink.saluber.services.model.Booking</class>
        <class>it.storelink.saluber.services.model.Station</class>
        <class>it.storelink.saluber.services.model.Doctor</class>
        <class>it.storelink.saluber.services.model.Examination</class>
        <class>it.storelink.saluber.services.model.Hospital</class>
        <class>it.storelink.saluber.services.model.MedicalTestType</class>
        <class>it.storelink.saluber.services.model.Patient</class>
        <class>it.storelink.saluber.services.model.Specialization</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
        </properties>
    </persistence-unit>

</persistence>